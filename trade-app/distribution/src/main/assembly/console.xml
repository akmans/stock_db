<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>console</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<includes>
				<include>*:jar:*</include>
			</includes>
			<excludes>
				<exclude>*:sources</exclude>
			</excludes>
			<outputDirectory>console/lib</outputDirectory>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>src/main/bin</directory>
			<outputDirectory>console/bin</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>console/classes/resources</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../core/src/main/resources</directory>
			<outputDirectory>console/classes/resources</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../stock/src/main/resources</directory>
			<outputDirectory>console/classes/resources</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../fx/src/main/resources</directory>
			<outputDirectory>console/classes/resources</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../cashing/src/main/resources</directory>
			<outputDirectory>console/classes/resources</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>